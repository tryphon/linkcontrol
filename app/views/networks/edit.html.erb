<%= title_tag t(".title") %>

<% form_for @network, :url => network_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.radio_button :method, "dhcp" %>
    <%= f.label :method_dhcp, NetworkPresenter.dhcp_method_name %><br/>
  </p>

  <fieldset id="network_static_inputs">
    <legend>
      <%= f.radio_button :method, "static" %>
      <%= f.label :method_static, NetworkPresenter.static_method_name %>
    </legend>

    <p>
    <%= f.label :static_address, Network.human_attribute_name("static_address") %><br/>
    <%= f.text_field :static_address %>
    </p>

  <p>
    <%= f.label :static_netmask, Network.human_attribute_name("static_netmask") %><br/>
    <%= f.text_field :static_netmask %>
  </p>

  <p>
    <%= f.label :static_gateway, Network.human_attribute_name("static_gateway") %><br/>
    <%= f.text_field :static_gateway %>
  </p>

  <p>
    <%= f.label :static_dns1, Network.human_attribute_name("static_dns1") %><br/>
    <%= f.text_field :static_dns1 %>
  </p>
  </fieldset>

  <h3><%= t("networks.target_properties") %></h3>

  <p>
    <%= f.label :linkstream_target_host, Network.human_attribute_name("linkstream_target_host") %><br/>
    <%= f.text_field :linkstream_target_host %>
  </p>

  <p>
    <%= f.label :linkstream_target_port, Network.human_attribute_name("linkstream_target_port") %><br/>
    <%= f.text_field :linkstream_target_port %>
  </p>

  <h3><%= t("networks.local_ports_properties") %></h3>

  <p>
    <%= f.label :linkstream_udp_port, Network.human_attribute_name("linkstream_udp_port") %><br/>
    <%= f.text_field :linkstream_udp_port %>
  </p>

  <p>
    <%= f.label :linkstream_http_port, Network.human_attribute_name("linkstream_http_port") %><br/>
    <%= f.text_field :linkstream_http_port %>
  </p>

  <p>
    <%= f.submit t(".submit") %> 
    <%= t("or") %> <%= link_to "#{t(".cancel")} &#8250;", network_path %>
  </p>

<% end %>

