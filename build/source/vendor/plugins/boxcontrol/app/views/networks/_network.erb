<h3><%= link_to network.name, network_path(network) %></h3>
<div class="network description">
  <p>
    <%= network.presenter.method_name %>
  </p>
  
  <p>
   <%= Network.human_attribute_name("address") %> :
   <%= network.address or t("networks.undefined_address") %>
  </p>    
</div>

<div class="actions">
  <%= link_to t("actions.show"), network, :class => "view" %>
  <%= link_to t("actions.edit"), edit_network_path(network), :class => "edit" %>
</div>
