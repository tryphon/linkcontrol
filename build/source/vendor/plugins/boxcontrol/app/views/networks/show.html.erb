<%= title_tag @network.name %>

<div class="description">
  <p>
    <%= @network.presenter.method_name %>
  </p>

  <p>
   <%= Network.human_attribute_name("address") %> :
   <%= @network.address or t("networks.undefined_address") %>
  </p>    
  
  <% if @network.manual? %>
  <h3><%= t(".static_properties") %></h3>

  <p>
    <%= Network.human_attribute_name("static_address") %> :
    <%= @network.static_address %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_netmask") %> :
    <%= @network.static_netmask %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_gateway") %> :
    <%= @network.static_gateway %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_dns1") %> :
    <%= @network.static_dns1 %>
  </p>
  <% end %>

  <h3><%= t(".physical_properties") %></h3>

  <p>
   <%= Network.human_attribute_name("id") %> :
   <%= @network.id %>
  </p>    

  <p>
   <%= Network.human_attribute_name("mac_address") %> :
   <%= @network.mac_address %>
  </p>    

</div>

<div class="actions">
  <%= link_to t("actions.edit"), edit_network_path(@network), :class => "edit" %>
</div>
